/* pages/answer/answer.wxss */
page {
  height: 100%;
}
.container {
  background: #29cc6d;
  height: 100%;
  padding: 10px 0px;
}
.question {
  margin-top: 80rpx;
  width: 100%; 
  display: flex; 
  justify-content: center; 
}
.answer {
  width: 100%;
  height: 100%;
  margin-top: 80rpx;
}
.answerNext {
  justify-content: space-between;
  color: #3883fa;
  background: #fff;
  border-radius: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 40rpx 40rpx;
  position: relative;
}
.answerNext-error {
  justify-content: space-between;
  color: #cf616a;
  background: #fff;
  border-radius: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 40rpx 40rpx;
  position: relative;
}

.answerNext-right {
  justify-content: space-between;
  color: #29cc6d;
  background: #fff;
  border-radius: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 40rpx 40rpx;
  position: relative;
}