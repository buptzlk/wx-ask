      <button bindtap="answerNext" data-value="D" class="{{isAnswerRight?'answerNext-right':'answerNext-error'}}" type="button">{{D}}</button>
    </view>
    <view wx:else> 
      <button bindtap="answerNext" data-value="D" class="answerNext" 
      type="button">{{D}}</button>
    </view>
  </view>
</view>