/* pages/score/score.wxss */
.container {
  padding: 10px 0px;
  background-color: #F2f2f2;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 188rpx;
  height: 188rpx;
  margin-top: 180rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
  margin-top: 20rpx;
}
.tip {
  margin-top: 60px;
  text-align: center;
  color: #29cc6d;
}
.info {
  margin-top: 40px;
  text-align: center;
}
.infotext {
  font-size: 52px;
  color: #29cc6d;
}
.infotext1 {
  font-size: 22px;
  color: #29cc6d;
}